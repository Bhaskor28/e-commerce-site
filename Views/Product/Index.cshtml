@{
}
@model List<Product>;

<a asp-action="Create" asp-controller="Product" class="btn btn-primary">Add New Product</a>
<div class="container">
    <div class="text-center">
        <h1>All Products</h1>
    </div>
</div>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Stock Qantity</th>
            <th scope="col">Action</th>

        </tr>
    </thead>

    
        


    
    <tbody>
        
            @foreach (var item in Model)
            {
                <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.StockQuantity</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Edit</a>

                    <button class="btn btn-sm btn-secondary" onclick="confirmDelete('@item.Id')">Delete</button>
                    

                </td>

            </tr>

            }

        
    </tbody>
</table>

